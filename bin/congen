base_dir="`dirname "$0"`/.."
CLASSPATH=$base_dir/target/classes:$base_dir/target/dependency/*:$base_dir/lib/*:$CLASSPATH

function usage {
	echo "Usage: `basename "$0"` [ options ] cdlfile" >&2
	echo "	-e: performs extension only" >&2
	echo "  -j: output JSON" >&2
	echo "  -i N: output Nth document (N=0,1,2,..)" >&2
	echo "  -p PATH: output path of documents" >&2
	
}
#
# command options
#
while getopts ":ehji:p:l:" opt; do
  case $opt in
  e)
  	CDL_MODE_OPTS="$CDL_MODE_OPTS -Dcdl.mode=extend-only"
  	;;
  j)
  	CDL_MODE_OPTS="$CDL_MODE_OPTS -Dcdl.output=json"
  	;;
  i)
  	CDL_MODE_OPTS="$CDL_MODE_OPTS -Dcdl.doc.idx=$OPTARG"
  	;;
  p)
  	CDL_MODE_OPTS="$CDL_MODE_OPTS -Dcdl.doc.path=$OPTARG"
  	;;
  l)
  	CDL_MODE_OPTS="$CDL_MODE_OPTS -Dcongen.libs=$OPTARG"
  	;;
  h)
    usage
    exit 0
    ;;
  \?)
  	echo "Invalid option: -$OPTARG" >&2
  	usage
  	exit 1
  	;;
  :)
    echo "Option -$OPTARG requires an argument." >&2
    usage
    exit 1
    ;;
  esac
done
# remove options from $@
shift $((OPTIND-1))



if [ $1 ]; then
ARG="$1"
fi
java $CDL_OPTS $CDL_MODE_OPTS -cp "$CLASSPATH" com.nec.congenio.ConfigDescription "$ARG"
